@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student

<h4>Add new student</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.DOE)
  @Html.TextBoxFor(model => model.DOE)

  <input type="submit" value="Add new student" class="btn btn-default">
}
<p>@Html.ActionLink("Show all students", "Index")</p>